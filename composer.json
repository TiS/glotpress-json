{
  "name":         "swissspidy/glotpress-json",
  "description":  "Adds JSON Format support to GlotPress",
  "version":      "0.1.0",
  "type":         "wordpress-plugin",
  "keywords":     [
    "translations"
  ],
  "homepage":     "https://github.com/swissspidy/glotpress-json",
  "license":      [
    "GPL-2.0+"
  ],
  "repositories": [
    {
      "type": "git",
      "url":  "https://github.com/swissspidy/glotpress-json.git"
    }
  ],
  "require":      {
    "php": ">=5.3.0"
  },
  "require-dev":  {
    "phpmd/phpmd":              "@stable",
    "wp-coding-standards/wpcs": "@stable",
    "sebastian/phpcpd":         "@stable"
  },
  "scripts":      {
    "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs",
    "post-update-cmd":  "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
  },
  "authors":      [
    {
      "name":     "Pascal Birchler",
      "homepage": "https://pascalbirchler.com/"
    }
  ]
}
